<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical"
    app:behavior_peekHeight="56dp"
    app:behavior_hideable="true"
    android:clickable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:cardElevation="50dp"
    app:cardCornerRadius="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    tools:style="@style/CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/margin_text_temp_detail"
        android:paddingLeft="@dimen/margin_text_temp_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Tuesday"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exampleDegree"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"
                android:textAlignment="textEnd"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Tuesday"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exampleDegree"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"
                android:textAlignment="textEnd"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Tuesday"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exampleDegree"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"
                android:textAlignment="textEnd"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Tuesday"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exampleDegree"
                style="@style/TextTempDetail"
                android:layout_marginTop="@dimen/margin_top_temp_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_bottom_temp_bottom_sheet"
                android:textAlignment="textEnd"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>